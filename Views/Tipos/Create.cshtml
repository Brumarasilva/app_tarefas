@model app_tarefas.Models.Tipo

@{
    ViewData["Title"] = "Create";
}
<style>
    .table,
    .table th,
    .table td,
    .table thead,
    .table tbody {
        color: #fff !important;
    }

    .table a,
    .table a:visited {
        color: #fff !important;
    }
</style>

<style>
    body {
        background-color: #c99f9f !important;
        color: #fff !important;
    }
</style>

<style>
    .main-layout {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 250px;
        background: rgba(0, 0, 0, 0.08);
        padding: 32px 16px;
    }

    .content {
        flex: 1;
        padding: 32px;
    }
</style>

<h1>Create</h1>

<h4>Tipo</h4>
