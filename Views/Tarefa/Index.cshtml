@model IEnumerable<app_tarefas.Models.Tarefa>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table,
    .table th,
    .table td,
    .table thead,
    .table tbody {
        color: #fff !important;
    }

    .table a,
    .table a:visited {
        color: #fff !important;
    }
</style>

<style>
    body {
        background-color: #c99f9f !important;
        color: #fff !important;
    }
</style>

<style>
    .main-layout {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 250px;
        background: rgba(0, 0, 0, 0.08);
        padding: 32px 16px;
    }

    .content {
        flex: 1;
        padding: 32px;
    }
</style>

<h1></h1>

<p>
    <a asp-action="Create">Criar nova Tarefa</a>
</p>
<div class="main-layout">
    <div class="sidebar">
        <!-- Aqui vão os filtros/categorias -->

    </div>
    <div class="content">
        <!-- Aqui vai sua tabela de tarefas -->
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataCriacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataConclusao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Concluida)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCriacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataConclusao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo.Descricao)
                        </td>

                      <td>
    <form asp-action="ToggleConcluida" asp-route-id="@item.Id" method="post" style="display:inline;">
        <button type="submit" class="btn btn-link p-0" title="Marcar como concluída">
            @if (item.Concluida)
            {
                <i class="bi bi-check-circle-fill" style="font-size: 1.5rem; color: #43b97f;"></i>
            }
            else
            {
                <i class="bi bi-circle" style="font-size: 1.5rem; color: #fff;"></i>
            }
        </button>
    </form>
</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
